<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Number Battery Settings"
    android:key="number_junk_settings"
	 >

    <PreferenceCategory
		android:title="E X T R A S"
		android:key="battery_bars">

	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="battery_show_circle"
		android:summaryOn="Circle is on"
		android:summaryOff="Circle is off"
		android:title="Show Circle" 
		android:defaultValue="false"	/>	       

	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="battery_show_square"
		android:summaryOn="Square is on"
		android:summaryOff="Square is off"
		android:title="Show Square" 
		android:defaultValue="false"	/>	       

    </PreferenceCategory>
	
    <PreferenceCategory
		android:title="B A T T E R Y   B A R S"
		android:key="battery_bars">

   	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="battery_bar_bottom"
		android:summaryOn="Show a battery bar"
		android:summaryOff="Do not show a battery bar"
		android:title="Bottom Battery Bar" 
		android:layout_width="match_parent" 
		android:defaultValue="false"	/>       
		
   	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="battery_bar_right"
		android:summaryOn="Show a battery bar"
		android:summaryOff="Do not show a battery bar"
		android:title="Right Battery Bar" 
		android:defaultValue="false"	/>       
   	
	<DJSeekBarPreference	
		android:layout="?android:attr/preferenceLayoutChild"
   		android:key="battery_bar_width"
		android:title="Battery Bar Width"
		android:summary="Width of the battery bar"
		android:defaultValue="5" />	   			   	
   	   	
    </PreferenceCategory>
    
    
    
    <PreferenceCategory
		android:title="D E P L E T E D   L E V E L S"
		android:key="depleted_color_ranges"
		android:summary="Battery colors based on battery level"	>    
 

 
    
	<DJSeekBarPreference
	    android:layout="?android:attr/preferenceLayoutChild"
		android:key="depleted_levels_one"
		android:title="Max Level One"
		android:summary="Maximimum level for the color"
		android:defaultValue="10" />	
   
	<DJSeekBarPreference
	    android:layout="?android:attr/preferenceLayoutChild"
		android:key="depleted_levels_two"
		android:title="Max Level Two"
		android:summary="Maximimum level for the color"
		android:defaultValue="30" />	
   

	</PreferenceCategory>
    
    
    <PreferenceCategory
		android:title="B A T T E R Y   L E V E L S"
		android:key="battery_color_ranges"
		android:summary="Battery colors based on battery level"	>    
 
	<DJSeekBarPreference
	    android:layout="?android:attr/preferenceLayoutChild"
		android:key="battery_levels_one"
		android:title="Max Level One"
		android:summary="Maximimum level for the color"
		android:defaultValue="10" />	
    	
	<DJSeekBarPreference
	    android:layout="?android:attr/preferenceLayoutChild"
		android:key="battery_levels_two"
		android:title="Max Level Two"
		android:summary="Maximimum level for the color"
		android:defaultValue="30" />	
   
    
    </PreferenceCategory>    

</PreferenceScreen>
